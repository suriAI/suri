    "files": [
        "dist-electron/**/*",
        "dist-react/**/*"
    ],
    "asarUnpack": [
        "dist-react/weights/**/*"
    ],
    "extraFiles": [
        {
            "from": "src/electron/preload.js",
            "to": "dist-electron/electron/preload.js"
        }

{
  "files": ["dist-electron/**/*", "dist-react/**/*"],
  "appId": "com.suri.app",
  "productName": "Suri AI Attendance Tracker",
  "icon": "./public/icons/suri_icon.png",
  "beforePack": "scripts/before-pack.cjs",
  "win": {
    "target": ["portable", "msi"],
    "extraResources": [
      {
        "from": "../server/dist/server.exe",
        "to": "server/server.exe"
      }
    ]
  },
  "linux": {
    "target": "AppImage",
    "category": "utility",
    "extraResources": [
      {
        "from": "../server/dist/server",
        "to": "server/server"
      }
    ]
  },
  "mac": {
    "target": "dmg",
    "extraResources": [
      {
        "from": "../server/dist/server",
        "to": "server/server"
      }
    ]
  }
}
